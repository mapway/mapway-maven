<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:cn.mapway.ui.client.widget.common">
    <ui:style>
    .content {
    	padding: 10px 25px;
    }
    
    .ov {
    	overflow: hidden;
    }
    
    .blank {
    	width: 10px;
    	overflow: hidden;
    }
    
    .list {
    	padding: 20px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel ui:field="tools">
            <c:ButtonEx ui:field="btnCreate" text="新建"></c:ButtonEx>
            <c:ButtonEx ui:field="btnDelete" text="删除"></c:ButtonEx>
            <c:ButtonEx ui:field="btnOk" text="保存"></c:ButtonEx>
        </g:HorizontalPanel>
        <div class="{style.content}" style="width:450px">
            <table class="ntable">
                <tr>
                    <td width="80px">
                        <g:Label>元数据ID</g:Label>
                    </td>
                    <td width="300px">
                        <g:Label ui:field="lbId"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label>目录</g:Label>
                    </td>
                    <td>
                        <g:Label ui:field="lbPath" width="280px"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label>名称</g:Label>
                    </td>
                    <td>
                        <g:TextBox ui:field="txtName" width="280px"></g:TextBox>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label>值</g:Label>
                    </td>
                    <td>
                        <g:TextBox ui:field="txtValue" width="280px"></g:TextBox>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label>排序</g:Label>
                    </td>
                    <td>
                        <g:TextBox ui:field="txtRank" width="280px"></g:TextBox>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label>描述</g:Label>
                    </td>
                    <td>
                        <g:TextArea ui:field="txtDESCRIPTION" width="280px" height="100px"></g:TextArea>
                    </td>
                </tr>
            </table>
            <g:Label ui:field="lbMessage" styleName="message"></g:Label>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>