<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    	.box{
			border: solid 1px #f0f0f0;
			padding: 10px;
			width: 200px;
			height: 230px;
			margin: 10px;
			position: relative;
		}		
     .delete{
			position: absolute;
			top: 0px;
			right: 0px;
		}
    </ui:style>
    <g:HTMLPanel ui:field="box" styleName="{style.box}">
        <g:Image ui:field="delete" styleName="{style.delete}"></g:Image>
        <g:Image ui:field="img" width="200px" height="200px" ></g:Image>
        <g:HorizontalPanel>
        <g:Label ui:field="lbTitle"></g:Label>
        <g:Anchor ui:field="link" visible="false" text="下载"></g:Anchor>
        </g:HorizontalPanel>
        
        <g:TextBox ui:field="txtValue" visible="false" width="180px"></g:TextBox>
    </g:HTMLPanel>
</ui:UiBinder>