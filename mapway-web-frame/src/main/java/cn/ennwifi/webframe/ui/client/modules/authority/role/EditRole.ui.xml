<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .ov {
    	overflow: hidden;
    }
    </ui:style>
    <g:HTMLPanel width="500px" height="400px">
        <table cellpadding="4">
            <tr>
                <td>角色名称</td>
                <td>
                    <g:TextBox ui:field="txtName" width="300px"></g:TextBox>
                </td>
            </tr>
            <tr>
                <td>角色说明</td>
                <td>
                    <g:TextArea ui:field="txtSummary" width="300px" height="250px"></g:TextArea>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <g:Label ui:field="lbMessage" styleName="message"></g:Label>
                </td>
            </tr>
        </table>
        <g:HTMLPanel styleName="border-top {style.ov}" height="50px">
            <g:HorizontalPanel spacing="10" width="100%" horizontalAlignment="center">
                <g:Button ui:field="btnSave" text="保存"></g:Button>
            </g:HorizontalPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>