<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .lb {
        font-weight: bold;
        color: #000;
        font-size: 14px;
        text-align: center;
        }
    </ui:style>
    <g:ScrollPanel styleName="site-Center">
        <g:HTMLPanel styleName="site-Content" width="770px">
            <g:HorizontalPanel width="100%" styleName="site-Frame-Top">
                <g:Label styleName="site-Caption" text="静态地址映射配置"></g:Label>
                <g:cell horizontalAlignment="right">
                    <g:Anchor styleName="site-Button" text="新建一行" ui:field="btnNew"></g:Anchor>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel styleName="site-tools"
                               verticalAlignment="middle" spacing="3" height="30px">
                <g:Label width="100px" text="描述" styleName="{style.lb}"></g:Label>
                <g:Label width="200px" text="静态地址" styleName="{style.lb}"></g:Label>
                <g:Label width="50px" text="" styleName="{style.lb}"></g:Label>
                <g:Label width="300px" text="动态地址" styleName="{style.lb}"></g:Label>
                <g:Label width="100px" text="操作" styleName="{style.lb}"></g:Label>
            </g:HorizontalPanel>

            <g:HTMLPanel ui:field="center">
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>