<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:VerticalPanel width="100%" height="100%">
		<g:cell horizontalAlignment="center" verticalAlignment="middle">
			<g:HTMLPanel width="450px" styleName="site-Frame">
				<div class="site-Frame-Top">
					<table width="100%" cellpadding="3px" cellspacing="2px">
						<tr>
							<td colspan="2">
								<g:Label ui:field="lbCaption" styleName="site-Caption"
									text="登录"></g:Label>
							</td>
							<td align="right">
								<g:Anchor href="../" text="首页"></g:Anchor>
							</td>
						</tr>
					</table>
				</div>

				<table width="100%" cellpadding="3px" cellspacing="2px">
					<tr>
						<td rowspan="3">
							<g:Image ui:field="icon"></g:Image>
						</td>
						<td>
							<g:Label styleName="site-Label" text="用户名"></g:Label>
						</td>
						<td>
							<g:TextBox ui:field="txtUserName" styleName="site-Input"
								width="180px"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label styleName="site-Label" text="密码"></g:Label>
						</td>
						<td>
							<g:PasswordTextBox ui:field="txtPassword"
								styleName="site-Input" width="180px"></g:PasswordTextBox>
						</td>
					</tr>

					<tr>
						<td colspan="2">
							<g:Label ui:field="lbMessage" styleName="site-Message"
								text="&nbsp;"></g:Label>
						</td>
					</tr>
				</table>
				<div class="site-Frame-Bottom">
					<table width="100%">
						<tr>
							<td align="right">
								<g:Button ui:field="btnSubmit" text="登录"></g:Button>
							</td>
						</tr>
					</table>
				</div>
			</g:HTMLPanel>

		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder>