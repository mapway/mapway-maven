<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
      .tools{
	min-width:350px;
	height: 50px;
	background-color: #f0f0f0;
}
.content{
	padding: 15px;
}
    </ui:style>
    <g:HTMLPanel>
            <g:HTMLPanel styleName="{style.content}">
            <g:HTML ui:field="html"></g:HTML>
            
            </g:HTMLPanel>
            <g:HorizontalPanel styleName="{style.tools}" width="100%" horizontalAlignment="center" verticalAlignment="middle">
                 <g:Button ui:field="btnCancel"  text="取消"></g:Button>
                <g:Button ui:field="btnOK"  text="确定"></g:Button>
            </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>